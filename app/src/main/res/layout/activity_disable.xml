<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".disableActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="372dp"
            android:layout_height="77dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="What is a reasonable accommodation?"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="377dp"
            android:layout_height="255dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:text="Any change to polices, practices, procedures or services to allow accessibility and equal opportunity for a person with a disability.  Examples include:  Installing ramps and hand railings to make a house wheelchair accessible. Changing the date rent is due to coincide with the date you receive your disability check. Allowing you to use a different entrance or park in a specific parking spot because of mobility issues. Helping you transfer if your home is unsuitable due to your disability."
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="372dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="How do I request a reasonable accommodation?"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="374dp"
            android:layout_height="207dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:text="Ask for a Disability Verification letter from a doctor, medical professional, peer support group, non-medical service agency or other reliable person who is in a position to know about your disability. The letter should state your disability and how it impacts your housing.  (Download sample)"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>